<div class="weather">
    <form action='/api/?city' method="get" class="formContent centre">
        <input name='city' class='city' type='text' placeholder="enter a city name" />
        <input type="submit" value="serch" class="btn search">
    </form>
    <h2 class="title" id="city">{{city}}</h2>
    <div class="centre">
        <button onclick="getLocation()" class="btn location" id="btn"> get the weather for your current location</button>
        {{#if data}}
    </div>
    <div id="geo" class="centre"></div>
    <div class="container" id="container">


        {{#each data}}
        <div class="card">
            <div class='content '>
                <div class="icon">
                    {{#if main}}{{#each weather}}
                    <span class="hide">{{main}}</span>{{/each}}
                    <img src="/icon/Rainy.png" class="image" /> {{/if}}
                </div>
                <h3 class="main"> {{main.temp}}&deg;C</h3>
                {{#each weather}}
                <p class="description">{{description}}</p>
                {{/each}}
                <small class="date">{{dt_txt}}</small>
            </div>
        </div>
        {{/each}} {{/if}}
    </div>

</div>

